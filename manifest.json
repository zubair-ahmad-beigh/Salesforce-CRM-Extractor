{
    "manifest_version": 3,
    "name": "Salesforce CRM Data Extractor",
    "version": "1.0.0",
    "description": "Extract and manage Salesforce CRM data locally using DOM scraping",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*.salesforce.com/*",
        "*://*.lightning.force.com/*",
        "*://*.my.salesforce.com/*",
        "*://*.develop.lightning.force.com/*",
        "*://*.develop.my.salesforce.com/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.salesforce.com/*",
                "*://*.lightning.force.com/*",
                "*://*.my.salesforce.com/*",
                "*://*.develop.lightning.force.com/*",
                "*://*.develop.my.salesforce.com/*",
                "*://*/lightning/*"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injected-ui.js",
                "injected-ui.css"
            ],
            "matches": [
                "*://*.salesforce.com/*",
                "*://*.lightning.force.com/*",
                "*://*.my.salesforce.com/*",
                "*://*.develop.lightning.force.com/*",
                "*://*.develop.my.salesforce.com/*"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}